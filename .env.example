# ─── Supabase ──────────────────────────────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ─── AI ────────────────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...          # Used for Whisper transcription

# ─── Redis (BullMQ job queue) ──────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── Platform OAuth credentials ───────────────────────────────────────────────
# TikTok Developer App
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Instagram / Facebook (Meta)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# YouTube / Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ─── Python AI Service ─────────────────────────────────────────────────────────
PYTHON_SERVICE_URL=http://localhost:8000
PYTHON_SERVICE_SECRET=your-internal-secret   # shared HMAC secret

# ─── App ───────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ─── Sentry (error monitoring) ─────────────────────────────────────────────────
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=social-optimizer
SENTRY_AUTH_TOKEN=sntrys_...   # only needed for source map uploads at build time

# ─── Email (Resend) ────────────────────────────────────────────────────────────
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@yourdomain.com

# ─── Cron (Vercel Cron jobs) ───────────────────────────────────────────────────
CRON_SECRET=your-random-secret   # used to authenticate /api/notifications/weekly

# ─── Stripe (billing) ─────────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Price IDs — create these in Stripe dashboard as recurring monthly prices
STRIPE_PRICE_ID_STARTER=price_...   # $29/mo
STRIPE_PRICE_ID_PRO=price_...       # $79/mo
STRIPE_PRICE_ID_AGENCY=price_...    # $199/mo
